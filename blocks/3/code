#include <iostream>

using namespace std;

int main()
{
	int xlim, ylim;
	cin >> xlim;
	cin >> ylim;

	int delta_x, delta_y;
	int current_x = 0, current_y = 0;

	int new_x, new_y;

	while (true)
	{
		cin >> delta_x;
		cin >> delta_y;
		if (delta_x == 0 && delta_y == 0) break;

		new_x = current_x + delta_x;
		new_y = current_y + delta_y;

		if (new_x > xlim) new_x = xlim;
		else if (new_x < 0) new_x = 0;

		if (new_y > ylim) new_y = ylim;
		else if (new_y < 0) new_y = 0;

		cout << new_x << ' ' << new_y << endl;
		current_x = new_x;
		current_y = new_y;
	}
}